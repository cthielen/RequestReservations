<h1>Existing Reservations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Reason</th>
    <th>Requested</th>
    <th>Expiration</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.user_id %></td>
    <td><%= reservation.reason %></td>
    <td><%= reservation.requested_at %></td>
    <td><%= reservation.expiration %></td>
    <td><%= reservation.status_id %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

